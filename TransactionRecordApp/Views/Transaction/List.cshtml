@model List<Transaction>


@{
    ViewData["Title"] = "All Transactions";
}


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ticker Symbol</th>
            <th>Company Name</th>
            <th>Quantity</th>
            <th>Share Price</th>
            <th>Gross Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Transaction t in Model)
        {
            <tr>
                <td>@t.TickerSymbol</td>
                <td>@t.CompanyName</td>
                <td>@t.Quantity</td>
                <td>$@t.SharePrice</td>
                <td>$@t.GrossValue</td>
            </tr>
        }
    </tbody>
</table>